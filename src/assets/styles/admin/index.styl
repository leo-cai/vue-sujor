@import "../config.styl"

.admin-wrapper
  width 100%
  height 100%

.admin-header
  width 100%
  height 60px
  line-height 60px
  font-size 20px
  background theme-puce
  color white
  a
    color white
    &:hover
      color theme-pink

.admin-left
  background theme-puce
  position fixed
  top 60px
  left 0
  bottom 0
  overflow-x hidden
  overflow-y hidden
  color white
  width 200px
  a
    color white
    &:hover
      color theme-pink

.admin-right
  position relative
  left 200px
