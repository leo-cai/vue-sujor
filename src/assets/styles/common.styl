@import "config.styl"

body
  width 100%
  height 100%
  margin 0
  padding 0
  background whitesmoke
  -webkit-font-smoothing antialiased
  font font-size Zapfino PingFang SC, Helvetica, Arial, sans-serif

input
  -webkit-appearance none

ul, li
  list-style none

h1, h2, h3, h4, h5, p, span, ul, li, input
  margin 0
  padding 0

a
  text-decoration none
  color theme-puce
  &:hover
    color theme-pink

.link
  text-decoration none
  color theme-puce
  &:hover
    text-decoration underline
    color theme-puce

.clear-fix
  clear both

.app-container
  width high-width
  padding header-height + 30px 0 30px 0
  margin 0 auto
  position relative

.dark
  background theme-puce !important
  color white !important

border-radius(n)
  border-radius n
  -moz-border-radius n
  -webkit-border-radius n

box-shadow(args...)
  box-shadow args
  -o-box-shadow args
  -moz-box-shadow args
  -webkit-box-shadow args

transition(args...)
  transition args
  -o-transition args
  -moz-transition args
  -webkit-transition args

animation(args...)
  animation args
  -o-animation args
  -moz-animation args
  -webkit-animation args

transform(args...)
  transform args
  -o-transform args
  -moz-transform args
  -webkit-transform args

